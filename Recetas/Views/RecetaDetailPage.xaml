<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recetas.Views.RecetaDetailPage"
             Title="{Binding Title}">
      <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modificar" Clicked="Update_Clicked" />
        <ToolbarItem Text="Eliminar" Clicked="Delete_Clicked" />
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Titulo:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Receta.Title}" FontSize="Small"/>
        <Label Text="Ingredientes:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Receta.Ingredients}" FontSize="Small"/>
        <Label Text="Procedimiento:" FontSize="Large" TextColor="#4169e1" Font="Bold"/>
        <Label Text="{Binding Receta.Instruction}" FontSize="Small"/>

    </StackLayout>
    
</ContentPage>