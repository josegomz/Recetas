<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recetas.Views.NewRecetaPage"
             Title="Nueva receta">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancelar" Clicked="Cancel_Clicked" />
        <ToolbarItem Text="Guardar" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Title" FontSize="Medium" />
            <Entry Text="{Binding Receta.Title}" FontSize="Small" />
            <Label Text="Ingredients" FontSize="Medium" />
            <Entry Text="{Binding Receta.Ingredients}" FontSize="Small" />
            <Label Text="Instruction" FontSize="Medium" />
            <Editor Text="{Binding Receta.Instruction}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
