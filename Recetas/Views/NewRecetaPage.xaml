<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recetas.Views.NewRecetaPage"
             Title="Nueva receta">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancelar" Clicked="Cancel_Clicked" />
        <ToolbarItem Text="Guardar" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Título" FontSize="Medium" />
            <Entry Text="{Binding Receta.Title}" FontSize="Small" Placeholder="Receta de cocina"  />
            <Label Text="Ingredientes" FontSize="Medium" />
            <Editor Text="{Binding Receta.Ingredients}" FontSize="Small" Placeholder="ingredientes..." HeightRequest="100"/>
            <Label Text="Instrucción" FontSize="Medium" />
            <Editor Text="{Binding Receta.Instruction}"  FontSize="Small"  Placeholder="instrucciones..." HeightRequest="100"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
